<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/categoryImage"
        android:layout_width="@dimen/_200"
        android:layout_height="@dimen/_200"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_100"
        android:src="@drawable/category_default" />

    <EditText
        android:id="@+id/categoryEdit"
        android:layout_width="@dimen/_200"
        android:layout_below="@id/categoryImage"
        android:layout_marginTop="@dimen/_10"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:hint="@string/category_name"/>

    <Button
        android:background="#323561"
        android:textColor="#ffff"
        android:id="@+id/addCategoryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_7"
        android:text="add"/>

</RelativeLayout>