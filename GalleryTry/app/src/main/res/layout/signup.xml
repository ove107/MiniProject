<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#06A7EF">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/sign_up_image"
        android:src="@drawable/signup"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#ECF323"
        app:civ_circle_background_color="@color/white"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="click icon to add profile pic"
        android:layout_below="@id/sign_up_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:id="@+id/signup_text"
        android:gravity="center"/>

    <EditText
       android:id="@+id/signup_name"
        android:padding="10dp"
        android:background = "@drawable/borders"
        android:layout_below="@id/signup_text"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Enter Name"
        android:textColorHint="@color/black"
        android:gravity="center"
        android:inputType="text"
        android:maxLines="1"
        />
    <EditText
        android:padding="10dp"
        android:background = "@drawable/borders"
        android:id="@+id/signup_email"
        android:layout_below="@id/signup_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Enter Email"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textColorHint="@color/black"
        />

    <EditText
        android:padding="10dp"
        android:background = "@drawable/borders"
        android:id="@+id/signup_password"
        android:layout_below="@id/signup_email"
        android:inputType="textPassword"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Enter Password"
        android:gravity="center"
        android:maxLines="1"
        android:textColorHint="@color/black"
        />

    <Button
        android:backgroundTint="@color/white"

        android:padding="10dp"
        android:textSize="18sp"
        android:id="@+id/signup_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Sign up"
        />



</RelativeLayout>